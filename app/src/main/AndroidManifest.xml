<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.zup.apprickymorty">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_sticker_ricky_morty"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_sticker_ricky_morty"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppRickyMorty"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppRickyMorty.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.HomeActivity"
            android:exported="true" />
    </application>

</manifest>