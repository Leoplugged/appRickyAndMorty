<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvCharacter"
    android:layout_height="150dp"
    android:layout_margin="@dimen/margin_16"
    android:layout_width="150dp"
    tools:context=".ui.view.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/ivCharacter"
            android:layout_height="@dimen/image_size_150"
            android:layout_width="@dimen/image_size_150"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_sticker_ricky_morty"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvCharacterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            android:gravity="center"
            android:text="@string/character_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toBottomOf="@+id/ivCharacter"
            app:layout_constraintEnd_toEndOf="@id/ivCharacter"
            app:layout_constraintStart_toStartOf="@id/ivCharacter" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>